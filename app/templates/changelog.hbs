<h2>Changelog</h2>

<div class="row">
  <div class="col-md-6">
  <h2>Create a pull request</h2>
    {{create-pr}}
  </div>
  <div id="changelog" class="col-md-6">
    <h2>Changes</h2>
    <ul>
      {{#each model as |diff|}}
      <li>
        {{#link-to "station" diff.id}}{{diff.name}} ({{diff.id}}){{/link-to}}
        {{diff.field}}:
        <span class="original-value">{{diff.originalValue}}</span>
        <span class="new-value">{{diff.newValue}}</span>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
